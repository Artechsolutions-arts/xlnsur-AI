# Environment Variables for Insurance Chatbot API
# Copy this file to .env and fill in your actual API keys

# NVIDIA API Key for LLM access
NVAPI_KEY=your_nvidia_api_key_here

# Jina AI API Key for embeddings, chunking, and reranking
JINA_API_KEY=your_jina_api_key_here

# Optional: API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Optional: CORS Configuration (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
